  <h2 class="title-box">Our story begins...</h1>
  <img class="central-img" id="image" src={{image}} alt="central image" />
  <div class="flex-bottom">
    <div class="story-box">
      <div id="story-text">
      </div>
        <div class="continue-button">
          <button class="passive-button" id="introButton" type="button" name="button">Continue</button>
        </div>
    </div>
    <div class="options-box">
      <div class="button">
        <button class="aggro-button" id="attackButton" type="button" name="button">Attack!</button>
        <button class="passive-button" id="resetButton" type="button" name="button">Run Away!</button>
      </div>
    </div>
  </div>
</div>
